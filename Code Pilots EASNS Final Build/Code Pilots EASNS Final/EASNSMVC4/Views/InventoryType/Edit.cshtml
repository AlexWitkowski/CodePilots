@model EASNSMVC4.Models.InventoryType

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>InventoryType</legend>

        @Html.HiddenFor(model => model.ID)

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ModelNumber)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ModelNumber)
            @Html.ValidationMessageFor(model => model.ModelNumber)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Desc)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Desc)
            @Html.ValidationMessageFor(model => model.Desc)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.VendorID, "Vendor")
        </div>
        <div class="editor-field">
            @Html.DropDownList("VendorID", String.Empty)
            @Html.ValidationMessageFor(model => model.VendorID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PeripheralID, "Peripheral")
        </div>
        <div class="editor-field">
            @Html.DropDownList("PeripheralID", String.Empty)
            @Html.ValidationMessageFor(model => model.PeripheralID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Display)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Display)
            @Html.ValidationMessageFor(model => model.Display)
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Disabilities Assigned</label>
            <div class="col-md-offset-2 col-md-10">
                <table>
                    <tr>
                        @{
    int discnt = 0;
    List<EASNSMVC4.ViewModels.ResourceDisabilityVM> disabilities = ViewBag.Disabilities;

    foreach (var disability in disabilities)
    {
        if (discnt++ % 3 == 0)
        {
            @:</tr><tr>
        }
                                @:<td>
                                    <input type="checkbox"
                                           name="selectedDisabilities"
                                           value="@disability.ID"
                                           @(Html.Raw(disability.assigned ? "checked=\"checked\"" : "")) />
                                    @disability.Desc
                                    @:</td>
                            }
                            @:</tr>
                        }
                    </table>
                </div>
            </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
