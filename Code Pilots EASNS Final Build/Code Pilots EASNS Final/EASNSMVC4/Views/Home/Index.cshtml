@{
    ViewBag.Title = "Home Page";
}
<link href="~/Content/Index.css" rel="stylesheet" />
<link href="~/Content/Style.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script>
$(function () {
    setTimeout(change1, 5000);
});

    function change1() {
        $("#img1").fadeOut(500);
        $("#bannerLink1").fadeOut(500);
        setTimeout(change2, 7000);
    }

    function change2() {
        $("#img2").fadeOut(500);
        $("#bannerLink2").fadeOut(500);
        setTimeout(change3, 7000);
    }

    function change3() {
        $("#img1").fadeIn(500);
        $("#img2").fadeIn(4000);
        $("#bannerLink1").fadeIn(500);
        $("#bannerLink2").fadeIn(4000);
        setTimeout(change1, 7000);
    }</script>

<!--======================= HOME BANNER ================-->
<div id="main">
    <div id="news">
        <img src="~/Images/student.jpg" width="959" height="300" alt="Learning" class="homeImage" style="z-index: 3;" id="img1">
        <img src="~/Images/homework.jpg" width="959" height="300" alt="apple" class="homeImage" style="z-index: 2;" id="img2">
        <img src="~/Images/tryLearn.jpg" width="959" height="300" alt="words" class="homeImage" style="z-index: 1;" id="img3">
        <h2 class="overImage" id="bannerLink1" style="z-index: 3;">@Html.ActionLink("Browse", "Index", "Resource") our extensive<br>library of resources</h2>
        <h2 class="overImage" id="bannerLink2" style="z-index: 2;">Visit our @Html.ActionLink("Technology Centre", "ViewTech", "Tech") to learn<br>about Assistive Learning Aids</h2>
        <h2 class="overImage" id="bannerLink3" style="z-index: 1;">Discover how @Html.ActionLink("Learning Disabilities", "LearningDisabilities", "Information")<br>affect one's ability to learn</h2>
    </div>

    <!--================= RESOURCE BUTTONS =============-->
    <div id="contentDirect">
        <div class="contentButtons" id="resourceButton">
            <img src="~/Images/clipboard.png" width="128" height="128" alt="resources">
        </div>
        <div class="contentButtons" id="technologyButton">
            <img src="~/Images/monitor.png" width="128" height="128" alt="technology center">
        </div>
        <div class="contentButtons" id="vendorButton">
            <img src="~/Images/center.png" width="128" height="128" alt="vendors">
        </div>
    </div>

    <!--================ TWITTER ====================-->
    <div id="twitterContainer">
                    <a class="twitter-timeline"  href="https://twitter.com/alexwitkowski99" data-widget-id="540431905527570434">Tweets by alexwitkowski99</a>
            <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
              </div><!--End of Twitter Container-->
    <!--================ RESOURCE BUTTON TITLES ========-->
    <div id="buttonTitles">
        <h2 class="buttonTitles">@Html.ActionLink("View Resources", "Index", "Resource")</h2>
        <h2 class="buttonTitles">@Html.ActionLink("Technology Centre", "ViewTech", "Tech")</h2>
        <h2 class="buttonTitles">@Html.ActionLink("View Vendors", "PubIndex", "Vendor")</h2>
    </div>
</div><!-- End of "main"-->
<!--=================== INSTRUCTIONS ================-->
<div id="instructions">
    <h1 id="gettingStarted">How To Get Started</h1>
    <h1 class="numbers">1. </h1>
    <p class="instPar">In order to take advantage of our extensive resource library, please Register for an account.</p>
    <h1 class="numbers">2. </h1>
    <p class="instPar">You will have to wait until your account is activated before you are able to access the sites information. Note: This may take a few days</p>
    <h1 class="numbers">3. </h1>
    <p class="instPar">Browse Resources, visit our Technology Center, view our Vendors, or book an Appointment at our Technology Center.</p>
    <h1 class="numbers">4. </h1>
    <p class="instPar">Don't forget to checkout our Twitter feed and Home Banner for upcoming events!</p>
</div>