@model IEnumerable<EASNSMVC4.Models.Vendor>
@{
    ViewBag.Title = "View Vendors";
}
@if (User.IsInRole("Admin"))
{

    <h1 id="disTitle" class="headerText">Vendors</h1>
    <p>@Html.ActionLink("Back to Control Pannel", "Index", "Admin")</p>
    <p>
        @Html.ActionLink("Add new Vendors", "Create")
    </p>
    <table>
        <tr style="border-bottom: solid 1px black;">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Province)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr style="border-bottom: solid 1px black; height: 75px;">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Province)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID })
                    @Html.ActionLink("Details", "Details", new { id = item.ID })
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
}
